<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Collectomon" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar_color</item>
    </style>

    <style name="Theme.Collectomon" parent="Base.Theme.Collectomon" />
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/primary_colour_red</item>
        <item name="android:textColorSecondary">#45494A</item>
    </style>

    <style name="checkBoxStyleCollect" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/secondary_colour_blue</item>
        <item name="android:textColorSecondary">#45494A</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/bottom_nav_selection_pill</item>
        <item name="itemIconSize">26sp</item>
        <item name="itemPaddingTop">20dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#000000</item>
    </style>





</resources>